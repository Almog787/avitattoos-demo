    <script>
        // --- 1. ×× ×’× ×•×Ÿ ×”×˜×œ×•×•×™×–×™×” (YouTube) ---
        // ×¨×©×™××ª ×¡×¨×˜×•× ×™× ××¦×—×™×§×™×/×•×™×¨××œ×™×™× (IDs ×©×œ ×™×•×˜×™×•×‘)
        const videos = [
            { id: '3grgARU1Gf4', title: '×—×ª×•×œ×™× ×¢×•×©×™× ×©×˜×•×™×•×ª' },
            { id: 'tntOCGkgt98', title: '×¨×’×¢×™ ×¤×¡×¤×•×¡×™× ××’×“×™×™×' },
            { id: 'I_izvAbhExY', title: '×—×™×•×ª ×—××•×“×•×ª ××¦×—×™×§×•×ª' },
            { id: 'q6EoRBvdVPQ', title: '×ª×™× ×•×§×•×ª ×¦×•×—×§×™×' },
            { id: '5dsGWM5XGdg', title: '×”×›×™ ××¦×—×™×§×™× 2024' }
        ];

        let currentVideo = 0;
        let isAutoPlay = true;
        let timerInterval;
        let progress = 0;
        const ROTATION_TIME = 15000; // ××—×œ×™×£ ×¡×¨×˜×•×Ÿ ×›×œ 15 ×©× ×™×•×ª (×›×“×™ ×œ× ×œ×©×¢××)

        function loadVideo(index) {
            const frame = document.getElementById('tvFrame');
            const title = document.getElementById('videoTitle');
            
            // ×”×•×¡×¤×ª autoplay=1 ×•-mute=1 ×›×“×™ ×©×–×” ×™×¨×•×¥ ××•×˜×•××˜×™×ª ×‘×“×¤×“×¤× ×™× ××•×“×¨× ×™×™×
            frame.src = `https://www.youtube.com/embed/${videos[index].id}?autoplay=1&mute=1&controls=1&rel=0`;
            title.innerText = `ğŸ¥ ×× ×’×Ÿ ×¢×›×©×™×•: ${videos[index].title}`;
            
            resetTimer();
        }

        function nextVideo() {
            currentVideo = (currentVideo + 1) % videos.length;
            loadVideo(currentVideo);
        }

        function resetTimer() {
            progress = 0;
            document.getElementById('timerBar').style.width = '0%';
        }

        function toggleAuto() {
            isAutoPlay = !isAutoPlay;
            document.getElementById('autoBtn').innerText = isAutoPlay ? 'â¸ ×¢×¦×•×¨ ×—×™×œ×•×£' : 'â–¶ ×”××©×š ×—×™×œ×•×£';
        }

        // ×˜×™×™××¨ ×œ×”×—×œ×¤×ª ×¡×¨×˜×•× ×™×
        setInterval(() => {
            if (isAutoPlay) {
                progress += (100 / (ROTATION_TIME / 100)); // ×¢×“×›×•×Ÿ ×‘×¨ ×”×ª×§×“××•×ª
                document.getElementById('timerBar').style.width = `${progress}%`;

                if (progress >= 100) {
                    nextVideo();
                }
            }
        }, 100);

        // ×˜×¢×™× ×” ×¨××©×•× ×™×ª
        loadVideo(0);


        // --- 2. ×× ×’× ×•×Ÿ ×—×“×©×•×ª (RSS to JSON) ---
        // ×©×™××•×© ×‘-API ×¦×™×‘×•×¨×™ ×œ×”××¨×ª ×”-RSS ×©×œ Ynet ×œ-JSON
        const RSS_URL = 'https://api.rss2json.com/v1/api.json?rss_url=http://www.ynet.co.il/Integration/StoryRss2.xml';

        async function fetchNews() {
            try {
                const response = await fetch(RSS_URL);
                const data = await response.json();
                
                const grid = document.getElementById('newsGrid');
                document.getElementById('newsLoader').style.display = 'none';

                // ×”×¦×’×ª 6 ×”×›×ª×‘×•×ª ×”×¨××©×•× ×•×ª
                data.items.slice(0, 6).forEach(item => {
                    // × ×™×¡×™×•×Ÿ ×œ×—×œ×¥ ×ª××•× ×” ××”×ª×•×›×Ÿ (×›×™ RSS ×œ×¤×¢××™× ×œ× × ×•×ª×Ÿ ×ª××•× ×” ×™×©×™×¨×”)
                    let imgUrl = 'https://images.unsplash.com/photo-1504711434969-e33886168f5c?auto=format&fit=crop&w=500&q=60'; // ×ª××•× ×ª ×‘×¨×™×¨×ª ××—×“×œ
                    
                    // ×‘×“×™×§×” ×× ×™×© ×ª××•× ×” ×‘-enclosure ××• ×‘×ª×™××•×¨
                    if (item.enclosure && item.enclosure.link) {
                        imgUrl = item.enclosure.link;
                    }

                    const card = document.createElement('div');
                    card.className = 'news-card';
                    card.innerHTML = `
                        <div class="news-img" style="background-image: url('${imgUrl}');"></div>
                        <div class="news-content">
                            <div>
                                <div class="news-title">${item.title}</div>
                                <div class="news-meta">${item.pubDate.split(' ')[0]}</div>
                            </div>
                            <a href="${item.link}" target="_blank" class="news-link">×§×¨× ×¢×•×“ ×‘-Ynet â†</a>
                        </div>
                    `;
                    grid.appendChild(card);
                });

            } catch (error) {
                document.getElementById('newsLoader').innerText = '×©×’×™××” ×‘×˜×¢×™× ×ª ×”×—×“×©×•×ª. × ×¡×” ×œ×¨×¢× ×Ÿ.';
                console.error('Error fetching news:', error);
            }
        }

        fetchNews();


        // --- 3. ×× ×’× ×•×Ÿ ×’×œ×¨×™×” (Unsplash) ---
        function loadGallery() {
            const galleryGrid = document.getElementById('galleryGrid');
            // ××™×œ×•×ª ××¤×ª×— ×œ×ª××•× ×•×ª ××©×¢×©×¢×•×ª/×—×™×•×‘×™×•×ª
            const keywords = ['funny cat', 'happy dog', 'funny baby', 'laughing', 'clown', 'party', 'smile'];
            
            for (let i = 0; i < 8; i++) {
                const randomKeyword = keywords[Math.floor(Math.random() * keywords.length)];
                // ×©×™××•×© ×‘-Source Unsplash ×œ×§×‘×œ×ª ×ª××•× ×” ×¨× ×“×•××œ×™×ª ×œ×¤×™ × ×•×©×
                const imgUrl = `https://source.unsplash.com/400x300/?${randomKeyword}&sig=${i}`;
                // ×”×¢×¨×”: ××›×™×•×•×Ÿ ×©-Source ×œ×¤×¢××™× ××™×˜×™, × ×©×ª××© ×‘×§×™×©×•×¨ ×™×©×™×¨ ×¢× ×¤×¨××˜×¨×™× ×©×•× ×™×
                const directUrl = `https://images.unsplash.com/photo-${[
                    '1529778873929-fa873270115a', // Cat
                    '1583511655857-d19b40a7a54e', // Dog
                    '1535930749574-1399327ce78f', // Funny
                    '1472453530982-d1606828093c', // Smile
                    '1533738363-b7f9aef128ce', // Cat glasses
                    '1518020382338-a7c693a76151', // Monkey
                    '1564756531-2954a2055652', // Happy
                    '1501432377862-3d0432b87a14'  // Smile
                ][i]}?auto=format&fit=crop&w=400&q=80`;

                const item = document.createElement('div');
                item.className = 'gallery-item';
                item.innerHTML = `<img src="${directUrl}" alt="Funny Image">`;
                galleryGrid.appendChild(item);
            }
        }

        loadGallery();

    </script>
